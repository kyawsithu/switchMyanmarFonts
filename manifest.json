{
  "name" : "Myanmar Font Switcher",
  "version" : "0.3",
  "description" : "Switch the font for Myanmar3 and Zawgyi",
  "background" : {
    "scripts": ["background.js"]
  },
  "page_action" :
  {
    "default_icon" : "myanmar-19.png",
    "default_title" : "This page is using Myanmar Font."
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : ["contentscript.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "icons" : {
    "48" : "myanmar-48.png",
    "128" : "myanmar-128.png"
  },
  "manifest_version": 2
}